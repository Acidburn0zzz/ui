<div class="pure-g">
  <div class="pure-u-1 pure-u-md-2-3">
    <section class="jobs">
      <h3>Jobs</h3>
      <ul>
        {{#each pipeline.jobs as |job|}}
        <li>
          <div class="pure-g">
            <div class="pure-u-1 pure-u-md-2-3">
              <h4>{{if job.isDisabled "Enable" "Disable"}} {{job.name}}</h4>
              {{#if job.isDisabled}}
              <p>Get your {{job.name}} job running again.</p>
              {{else}}
              <p>Stop the line by disabling the {{job.name}} job.</p>
              {{/if}}
            </div>
            <div class="pure-u-1 pure-u-md-1-3 right">
              {{#if job.isDisabled}}
                <a href="#" {{action "enableJob" job.id}}>{{fa-icon "fa-unlock"}}</a>
              {{else}}
                <a href="#" {{action "disableJob" job.id}}>{{fa-icon "fa-lock"}}</a>
              {{/if}}
            </div>
          </div>
        </li>
        {{/each}}
      </ul>
    </section>
  </div>



  <div class="pure-u-1 pure-u-md-2-3">
    <section class="danger">
      <h3>Danger Zone</h3>
      <ul>
        <li>
          {{#if showDangerButton}}
          <div class="pure-g">
            <div class="pure-u-1 pure-u-md-2-3">
              <h4>Remove this pipeline</h4>
              <p>Once you remove a pipeline, there is no going back.</p>
            </div>
            <div class="pure-u-1 pure-u-md-1-3 right">
              <a href="#" {{action "showRemoveButtons"}}>{{fa-icon "fa-trash"}}</a>
            </div>
          </div>
          {{/if}}
          {{#if showRemoveButtons}}
            <h4>Are you absolutely sure?</h4>
            <a href="#" {{action "cancelRemove"}} class="cancel">Cancel</a>
            <a href="#" {{action "removePipeline"}} class="remove">Remove</a>
          {{/if}}
          {{#if isRemoving}}
            <p>Please wait...</p>
          {{/if}}
        </li>
      </ul>

    </section>
  </div>
</div>
{{yield}}
